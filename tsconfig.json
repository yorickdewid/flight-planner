{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
    // "isolatedModules": true
  },
  "include": [
    "src",
    "cli"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}