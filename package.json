{
  "name": "flight-planner",
  "version": "1.5.2",
  "description": "Plan and route VFR flights",
  "keywords": [
    "aviation",
    "planner",
    "plane",
    "aerodrome",
    "pre-flight",
    "flight",
    "vfr",
    "vmc",
    "metar"
  ],
  "type": "module",
  "author": "Yorick de Wid <ydewid@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc && npm run lint",
    "start": "npm run build && node dist/test.js",
    "lint": "eslint src/",
    "test": "npm run build && NODE_OPTIONS=--experimental-vm-modules npx jest",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "cli": "npm run build && node dist/cli/cli.js"
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./airport": {
      "import": "./dist/airport.js",
      "types": "./dist/airport.d.ts"
    },
    "./metar": {
      "import": "./dist/metar.js",
      "types": "./dist/metar.d.ts"
    },
    "./planner": {
      "import": "./dist/planner.js",
      "types": "./dist/planner.d.ts"
    },
    "./service": {
      "import": "./dist/service.js",
      "types": "./dist/service.d.ts"
    },
    "./utils": {
      "import": "./dist/utils.js",
      "types": "./dist/utils.d.ts"
    }
  },
  "dependencies": {
    "@turf/turf": "^7.2.0",
    "convert-units": "^2.3.4",
    "metar-taf-parser": "^9.0.1",
    "suncalc": "^1.9.0"
  },
  "devDependencies": {
    "@types/convert-units": "^2.3.11",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.3",
    "@types/suncalc": "^1.9.2",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0"
  }
}
