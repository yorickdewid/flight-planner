{
  "name": "flight-planner",
  "version": "1.6.0",
  "description": "Plan and route VFR flights",
  "keywords": [
    "aviation",
    "planner",
    "plane",
    "aerodrome",
    "pre-flight",
    "flight",
    "vfr",
    "vmc",
    "metar"
  ],
  "type": "module",
  "author": "Yorick de Wid <ydewid@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc && npm run lint",
    "lint": "eslint src/",
    "test": "npm run build && NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test:watch": "npm run build && NODE_OPTIONS=--experimental-vm-modules npx jest --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint"
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./aircraft": {
      "import": "./dist/aircraft.js",
      "types": "./dist/aircraft.d.ts"
    },
    "./units": {
      "import": "./dist/units.js",
      "types": "./dist/units.d.ts"
    },
    "./utils": {
      "import": "./dist/utils.js",
      "types": "./dist/utils.d.ts"
    },
    "./format": {
      "import": "./dist/format.js",
      "types": "./dist/format.d.ts"
    }
  },
  "dependencies": {
    "@turf/turf": "^7.2.0",
    "convert-units": "^2.3.4",
    "metar-taf-parser": "^9.1.2",
    "suncalc": "^1.9.0"
  },
  "devDependencies": {
    "@types/convert-units": "^2.3.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@types/suncalc": "^1.9.2",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0"
  }
}